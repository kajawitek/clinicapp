<h1>Register appointment</h1>
<h2>Choose slot</h2>

<%= render 'appointment_slots/search_form', q: q, doctors: doctors, patient: patient %>

<table class='table' id='appointment-slots-table'>
  <thead class='table-dark'>
  <tr>
    <th>ID</th>
    <th>Doctor</th>
    <th>Date and time</th>
    <th colspan='3'></th>
  </tr>
  </thead>

  <tbody>

  <% available_appointment_slots.each do |appointment_slot| %>
    <tr>
      <td><%= appointment_slot.id %></td>
      <td><%= appointment_slot.doctor.full_name %></td>
      <td><%= appointment_slot.date_and_time %></td>
      <td><%= link_to 'Book appointment', new_appointment_path(patient: patient, appointment_slot: appointment_slot) %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<% if available_appointment_slots.count > items_amount %>
  <%== pagy_nav(pagy) %>
<% end %>
